<div style="position:relative; top:-700px;left: -15px; width:400px; height:155px; z-index: 3; font-size: 13px; color: #545559">
  <p><b>בעל צימר? הכנס</b></p>
  <p>
    <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  
      <%= f.text_field(:email, {:placeholder => "דוא\"ל", :class => "elementDefault"})-%>
      <%= f.password_field(:password, {:placeholder => "סיסמא", :class => "elementDefault"}) %>

      <% if devise_mapping.rememberable? -%>
        <%= f.check_box :remember_me %>
        <%= f.label "זכור אותי" %>
      <% end -%>

      <%= f.submit('הכנס', {:class => "btn-primary submitBtn"}) -%>
    <% end %>

    <%= render "links" %>
  </p>
</div>