<div id="main">
  <p><b>בעל צימר? הכנס</b></p>
  <p>
    <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  
      <%= f.text_field(:email, {:placeholder => "דוא\"ל"})-%>
      <%= f.password_field(:password, {:placeholder => "סיסמא"}) %>

      <% if devise_mapping.rememberable? -%>
        <%= f.check_box :remember_me %>
        <%= f.label "זכור אותי" %>
      <% end -%>

      <%= f.submit('הכנס', {:class => "btn-primary submitBtn"}) -%>
    <% end %>

    <%= render "links" %>
  </p>
</div>